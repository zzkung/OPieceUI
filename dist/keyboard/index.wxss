.op-mask {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 4999;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  transition: all 0.3s;
}
.op-show .op-mask {
  opacity: 1;
  visibility: visible;
}
.op-show .op-half-screen--keyboard {
  transform: translateY(0);
}
.op-hidden .op-mask {
  opacity: 0;
  visibility: hidden;
}
.op-hidden .op-half-screen--keyboard {
  transform: translateY(100%);
}
.op-half-screen--keyboard {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 5000;
  width: 100%;
  min-height: 50%;
  max-height: 75%;
  background: #F2F3F5;
  overflow: hidden;
  border-top-left-radius: 12px;
  border-top-right-radius: 12px;
  line-height: 1.4;
  transition: all 0.3s;
}
.op-half-screen--keyboard .op-half-screen--keyboard-hd {
  position: relative;
  height: 3.5em;
  display: flex;
  align-items: center;
  justify-content: center;
}
.op-half-screen--keyboard .op-half-screen--keyboard-hd .op-keyboard--title {
  font-size: 32rpx;
  font-weight: bold;
  max-width: 480rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.op-half-screen--keyboard .op-half-screen--keyboard-hd.border-line::after {
  position: absolute;
  top: -50%;
  right: -50%;
  bottom: -50%;
  left: -50%;
  box-sizing: border-box;
  border-bottom: 1px solid #d6d6d6;
  content: " ";
  transform: scale(0.5);
  transform-origin: center;
  pointer-events: none;
}
.op-half-screen--keyboard .op-half-screen--keyboard-hd .op-keyboard--close {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  padding: 0 32rpx;
  color: #409EFF;
}
.op-half-screen--keyboard .op-half-screen--keyboard-hd .op-keyboard--close.position-left {
  left: 10rpx;
}
.op-half-screen--keyboard .op-half-screen--keyboard-hd .op-keyboard--close.position-right {
  right: 10rpx;
}
.op-half-screen--keyboard .op-half-screen--keyboard-bd {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  height: 100%;
  padding: 30rpx 10rpx;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}
.op-half-screen--keyboard .op-half-screen--keyboard-bd .op-keyboard--item {
  width: 60rpx;
  padding: 4rpx 10rpx;
  margin: 6rpx;
  border-radius: 8rpx;
  text-align: center;
  background: #fff;
}
