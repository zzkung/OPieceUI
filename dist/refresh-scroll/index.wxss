.movable-area {
  width: 100%;
  height: 100vh;
}
.movable-area .scroll {
  width: 100%;
  height: calc(100vh + 90rpx);
}
.movable-area .scroll .scroll__view {
  height: 100%;
  position: relative;
  box-sizing: border-box;
}
.movable-area .scroll .scroll__view .scroll__refresh {
  height: 90rpx;
  position: relative;
}
.movable-area .scroll .scroll__view .scroll__refresh .arrow {
  position: relative;
  border-radius: 4rpx;
  width: 4rpx;
  height: 30rpx;
  background: #a5a5a5;
  transition: transform 0.15s ease-in-out;
  display: inline-block;
  vertical-align: middle;
}
.movable-area .scroll .scroll__view .scroll__refresh .arrow.rotate {
  transform: rotate(-180deg);
}
.movable-area .scroll .scroll__view .scroll__refresh .arrow:before {
  position: absolute;
  content: "";
  bottom: -4rpx;
  right: 50%;
  width: 4rpx;
  height: 16rpx;
  transform: rotate(45deg);
  transform-origin: 100% 100%;
  background: #a5a5a5;
  border-radius: 4rpx;
}
.movable-area .scroll .scroll__view .scroll__refresh .arrow:after {
  position: absolute;
  content: "";
  bottom: -4rpx;
  left: 50%;
  width: 4rpx;
  height: 16rpx;
  transform: rotate(-45deg);
  transform-origin: 0% 100%;
  background: #a5a5a5;
  border-radius: 4rpx;
}
.movable-area .scroll .scroll__view .scroll__refresh .loading {
  position: relative;
  display: inline-block;
  vertical-align: middle;
  width: 36rpx;
  height: 36rpx;
  margin-right: -14rpx;
}
.movable-area .scroll .scroll__view .scroll__refresh .loading .loading__item {
  position: absolute;
  top: 0;
  left: 0;
  width: 36rpx;
  height: 36rpx;
}
.movable-area .scroll .scroll__view .scroll__refresh .loading .loading__item:before {
  content: "";
  display: block;
  margin: 0 auto;
  width: 4rpx;
  height: 8rpx;
  background-color: #a5a5a5;
  border-radius: 4rpx;
  animation: fadeDelay 1.2s infinite ease-in-out both;
}
.movable-area .scroll .scroll__view .scroll__refresh .loading .loading__item:nth-child(2) {
  transform: rotate(30deg);
}
.movable-area .scroll .scroll__view .scroll__refresh .loading .loading__item:nth-child(2):before {
  animation-delay: -1.1s;
}
.movable-area .scroll .scroll__view .scroll__refresh .loading .loading__item:nth-child(3) {
  transform: rotate(60deg);
}
.movable-area .scroll .scroll__view .scroll__refresh .loading .loading__item:nth-child(3):before {
  animation-delay: -1s;
}
.movable-area .scroll .scroll__view .scroll__refresh .loading .loading__item:nth-child(4) {
  transform: rotate(90deg);
}
.movable-area .scroll .scroll__view .scroll__refresh .loading .loading__item:nth-child(4):before {
  animation-delay: -0.9s;
}
.movable-area .scroll .scroll__view .scroll__refresh .loading .loading__item:nth-child(5) {
  transform: rotate(120deg);
}
.movable-area .scroll .scroll__view .scroll__refresh .loading .loading__item:nth-child(5):before {
  animation-delay: -0.8s;
}
.movable-area .scroll .scroll__view .scroll__refresh .loading .loading__item:nth-child(6) {
  transform: rotate(150deg);
}
.movable-area .scroll .scroll__view .scroll__refresh .loading .loading__item:nth-child(6):before {
  animation-delay: -0.7s;
}
.movable-area .scroll .scroll__view .scroll__refresh .loading .loading__item:nth-child(7) {
  transform: rotate(180deg);
}
.movable-area .scroll .scroll__view .scroll__refresh .loading .loading__item:nth-child(7):before {
  animation-delay: -0.6s;
}
.movable-area .scroll .scroll__view .scroll__refresh .loading .loading__item:nth-child(8) {
  transform: rotate(210deg);
}
.movable-area .scroll .scroll__view .scroll__refresh .loading .loading__item:nth-child(8):before {
  animation-delay: -0.5s;
}
.movable-area .scroll .scroll__view .scroll__refresh .loading .loading__item:nth-child(9) {
  transform: rotate(240deg);
}
.movable-area .scroll .scroll__view .scroll__refresh .loading .loading__item:nth-child(9):before {
  animation-delay: -0.4s;
}
.movable-area .scroll .scroll__view .scroll__refresh .loading .loading__item:nth-child(10) {
  transform: rotate(270deg);
}
.movable-area .scroll .scroll__view .scroll__refresh .loading .loading__item:nth-child(10):before {
  animation-delay: -0.3s;
}
.movable-area .scroll .scroll__view .scroll__refresh .loading .loading__item:nth-child(11) {
  transform: rotate(300deg);
}
.movable-area .scroll .scroll__view .scroll__refresh .loading .loading__item:nth-child(11):before {
  animation-delay: -0.2s;
}
.movable-area .scroll .scroll__view .scroll__refresh .loading .loading__item:nth-child(12) {
  transform: rotate(330deg);
}
.movable-area .scroll .scroll__view .scroll__refresh .loading .loading__item:nth-child(12):before {
  animation-delay: -0.1s;
}
.movable-area .scroll .scroll__view .scroll__refresh.scroll__refresh--hidden {
  visibility: hidden;
}
.movable-area .scroll .scroll__view .scroll__loading {
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  transform: translateY(-50%);
  text-align: center;
  color: #999999;
}
.movable-area .scroll .scroll__view .scroll__loading .text {
  display: inline-block;
  vertical-align: middle;
  margin-left: 40rpx;
}
.movable-area .scroll .scroll__view .scroll__bottom {
  position: relative;
  height: 40rpx;
  padding: 40rpx 0;
}
.movable-area .scroll .scroll__view .empty {
  padding: 30rpx;
  text-align: center;
}
.movable-area .scroll .scroll__view .empty .empty__image {
  width: 200rpx;
  height: 200rpx;
  margin: 160rpx auto 60rpx;
}
.movable-area .scroll .scroll__view .empty .empty__text {
  color: #999999;
}
.success {
  position: absolute;
  z-index: 9;
  top: 20rpx;
  left: 0;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 24rpx;
  text-align: center;
  opacity: 0;
  transform: scale(0);
  color: #3F82FD;
}
.success:after {
  content: " ";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: currentColor;
  opacity: 0.7;
  transform: scaleX(0);
  transition: transform 0.3s ease-in-out;
  z-index: 0;
}
.success > .info {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  color: #ffffff;
}
.success.success--show {
  opacity: 1;
  transform: scale(1);
}
.success.success--show:after {
  transform: scaleX(1);
}
.success.success--tran {
  opacity: 0;
  transform: translateY(-100%);
  transition: opacity 0.35s linear, transform 0.35s linear;
}
@keyframes fadeDelay {
  0%,
  39%,
  100% {
    opacity: 0.2;
  }
  40% {
    opacity: 1;
  }
}
@-webkit-keyframes fadeDelay {
  0%,
  39%,
  100% {
    opacity: 0.2;
  }
  40% {
    opacity: 1;
  }
}
