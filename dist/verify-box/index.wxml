<view>
  <view class="op-verify--box">
    <view class="op-verify--item"
      wx:for="{{ length }}" 
      wx:key="index"
      data-index="{{ index }}"
      bindtap="handleFocus"
    >
      <text>{{value[index]}}</text>
      <view class="op-verify--cursor" hidden="{{ cursorIndex != index }}"></view>
    </view>
  </view>
</view>