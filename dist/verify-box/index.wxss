.op-verify--box {
  display: flex;
  height: 100rpx;
}
.op-verify--box .op-verify--item {
  position: relative;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--bg-base);
}
.op-verify--box .op-verify--item::after {
  position: absolute;
  content: ' ';
  top: -50%;
  right: -50%;
  left: -50%;
  bottom: -50%;
  border: 0 solid #fff;
  border-left-width: 1px;
  transform: scale(0.5);
}
.op-verify--box .op-verify--item:first-child::after {
  border-left-width: 0;
}
.op-verify--box .op-verify--cursor {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 1px;
  height: 40%;
  background: #333;
  transform: translate(-50%, -50%);
  animation: 1s cursor-flicker infinite;
}
@keyframes cursor-flicker {
  0% {
    opacity: 0;
  }
  50% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}
