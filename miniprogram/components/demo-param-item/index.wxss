.demo-param-item {
  margin-bottom: 30rpx;
}
.demo-param-item .demo-param-item__title {
  margin: 0 0 1.1em;
  padding: 15rpx 20rpx;
  border-left: 5rpx solid rgba(102, 128, 153, 0.075);
  border-top-right-radius: 5rpx;
  border-bottom-right-radius: 5rpx;
  background: rgba(102, 128, 153, 0.05);
  color: #3e5161;
  border-left-width: 10rpx;
}
.demo-param-item .demo-param-item__radio {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.demo-param-item .demo-param-item__radio .demo-param-item__radio-label {
  display: flex;
  align-items: center;
  width: calc((100vw - 48rpx - 30rpx) / 3);
  margin-right: 10rpx;
  margin-bottom: 30rpx;
}
.demo-param-item .demo-param-item__radio .demo-param-item__radio-label:nth-child(3n) {
  margin-right: 0;
}
