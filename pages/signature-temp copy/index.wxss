.signature-container {
  position: relative;
  width: 100%;
  height: calc(100vh - 60px);
}
.signature-container .canvas-placeholder {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 40rpx;
  color: #c0c4cc;
}
.signature-container .canvas-area {
  width: 100%;
  height: 100%;
}
.action-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60px;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 12rpx 0 rgba(0, 0, 0, 0.1);
  background-color: #fff;
}
.action-bar button {
  height: 40px;
  line-height: 40px;
  padding-top: 0;
  padding-bottom: 0;
  margin: 0 20rpx!important;
}