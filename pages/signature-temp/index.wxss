.signature-container {
  position: relative;
  width: 100%;
  height: calc(100vh - 120rpx);
}
.signature-container .canvas-placeholder {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 40rpx;
  color: #c0c4cc;
}
.signature-container .canvas-area {
  width: 100%;
  height: 100%;
}
.action-bar {
  display: flex;
  align-items: center;
  height: 120rpx;
  box-shadow: 0 -2rpx 12rpx 0 rgba(0, 0, 0, 0.1)
}